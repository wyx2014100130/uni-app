/**index.wxss**/
.home_head{
  height:87.96rpx;
  width:100%;
  display: flex;
  align-items: center;
  position:fixed;
  top:0;
  left:0;
  box-sizing: border-box;
  padding:0 30rpx;
  font-size:30rpx;
  color:#232323;
  z-index:12;
  background-color: #fff;
}
.home_head view:nth-of-type(2){
  width:490rpx;
  margin-left:50rpx;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  height:60rpx;
  padding-left:20rpx;
  color: #B3B3B3;
  font-size:26rpx;
}
.home_head view:nth-of-type(2) text{
  margin-left:16rpx;
}

/* banner */
.home_banner{
  height:386.94rpx;
  width:100%;
  box-sizing: border-box;
  padding:103rpx 30rpx 0 30rpx;
}
.home_banner swiper,.home_banner image{
  width:100%;
  height:280rpx;
  border-radius: 12rpx;
}

/* home_classify */
.home_classify{
  box-sizing: border-box;
  padding:30rpx 30rpx 0 30rpx;
  width:100%;
  height:303.88rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: 30rpx;
}
.home_classify_item{
  width:138rpx;
  height: 129.96rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.home_classify_item image{
  width:80rpx;
  height:80rpx;
}
.home_classify_item text{
  font-size:26rpx;
  color:#666;
  margin-top: 16rpx;
}
/* hot */
.home_hot{
  height: 532rpx;
  box-sizing: border-box;
  padding: 30rpx 0 40rpx 30rpx;
}
.home_hot_title{
  display: flex;
  padding-right: 40rpx;
  justify-content: space-between;
  font-size: 36rpx;
  color:#232323;
}
.home_hot_title text:nth-of-type(2){
  font-size:26rpx;
}
.home_hot_list{
  width: max-content;
  height: 380rpx;
  margin-top:30rpx;
  display: flex;
}
.home_hot_list .home_hot_item{
  width:200rpx;
  height:100%;
  margin-right: 16rpx;
}
.home_hot_list .home_hot_item image{
  width:200rpx;
  height:272rpx;
  border-radius: 10rpx;
}
.home_hot_list .home_hot_item text{
  margin-top:7rpx;
  font-size: 26rpx;
  color:#232323;
  display: inline-block;
  height: 84rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
/* home_recommend */
.home_recommend{
  box-sizing: border-box;
  padding:0 30rpx;
  width:100%;
}
.home_recommend_title{
  height: 75.94rpx;
  width:100%;
  box-sizing: border-box;
  padding:20rpx 0 10rpx 0;
  font-size: 36rpx;
  color:#232323;
}
.home_recommend_list{
  width:100%;
  display: flex;
  flex-wrap: wrap;
}
.recomment_list_item{
  width:339rpx;
  height:778.82rpx;
  border:1px solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 14rpx;
}
.recomment_list_item:nth-of-type(2n+1){
  margin-right:7rpx;
}
.recomment_list_item image{
  height: 462.96rpx;
  width:100%;
}
.recomment_list_info{
  height: 311.84rpx;
  width:100%;
  box-sizing: border-box;
  padding:10rpx 22rpx 22rpx 22rpx;
}
.recomment_list_info .recomment_list_infoTitle{
  width:100%;
  height:76rpx;
  font-size:28rpx;
  color:#232323;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.recomment_list_info .recomment_list_infoTitle image{
  width:66.96rpx;
  height:34rpx;
  line-height: 34rpx;
  margin-right:10rpx;
}
.recomment_list_time{
  font-size: 26rpx;
  color:#666;
  margin-top:11rpx;
 
}
.recomment_list_price {
  font-size:24rpx;
  color:#999;
  margin-top:12rpx;
}
.recomment_list_price text{
  font-size:32rpx;
  color:#FF6743;
  margin-right:14rpx;
}
.recomment_list_tag{
  display: flex;
  flex-wrap: wrap;
  margin-top:20rpx;
}
.recomment_list_tag view{
  height:36rpx;
  padding: 2rpx 10rpx;
  color:#FF6743;
  background-color: #fff1ef;
  font-size:24rpx;
  border-radius: 20rpx;
  margin:0rpx 10rpx 10rpx 0;
}
